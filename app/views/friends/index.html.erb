<h1><%="#{I18n.t(:listing)} #{I18n.t(:friends)}"%></h1>

<table>
  <tr>
    <th><%=I18n.t(:name)%></th>
    <th><%=I18n.t(:latitude)%></th>
    <th><%=I18n.t(:longitude)%></th>
    <th><%=I18n.t(:near_him)%></th>    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.name %></td>
    <td><%= friend.latitude %></td>
    <td><%= friend.longitude%></td>
    <% friend.calculates_near_him() %>
    <% friend.near_him.each do |f|%>
      <td><%= link_to f.name, f %></td>
    <% end %>
    <td><%= link_to I18n.t(:show), friend %></td>
    <td><%= link_to I18n.t(:edit), edit_friend_path(friend) %></td>
    <td><%= link_to I18n.t(:destroy), friend, confirm: I18n.t(:are_you_sure), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "#{I18n.t(:new)} #{I18n.t(:friend)}", new_friend_path %>
